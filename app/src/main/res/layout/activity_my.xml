<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="506dp"
        android:layout_gravity="left|top"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="0"
            android:gravity="right"
            android:editable="false"
            android:clickable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight=".20"
                android:id="@+id/linearLayout">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_weight="0.12"
                    android:onClick="click1"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_weight="0.12"
                    android:onClick="click4"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_weight="0.12"
                    android:onClick="click7"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/buttonPunto"
                    android:layout_weight="0.12"
                    android:onClick="clickPunto"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="âˆš"
                    android:id="@+id/buttonRaiz"
                    android:layout_weight="0.12"
                    android:onClick="clickRaiz" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="tan"
                    android:id="@+id/buttonTan"
                    android:layout_weight="0.12"
                    android:onClick="clickTangente" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:weightSum="1"
                android:id="@+id/linearLayout2"
                android:layout_gravity="center_vertical"
                android:layout_weight=".20">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_weight="0.12"
                    android:onClick="click2"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_weight="0.12"
                    android:onClick="click5"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_weight="0.12"
                    android:onClick="click8"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/button10"
                    android:layout_weight="0.12"
                    android:onClick="click0"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="x^y"
                    android:id="@+id/buttonExponente"
                    android:layout_weight="0.12"
                    android:onClick="clickExponente" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sin"
                    android:id="@+id/button12"
                    android:layout_weight="0.12"
                    android:onClick="clickSeno" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/linearLayout3"
                android:layout_gravity="center_vertical"
                android:layout_weight=".20">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_weight="0.12"
                    android:onClick="click3"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_weight="0.12"
                    android:onClick="click6"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_weight="0.12"
                    android:onClick="click9"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:id="@+id/buttonRes"
                    android:layout_weight="0.12"
                    android:layout_gravity="bottom"
                    android:onClick="clickRes"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="log"
                    android:id="@+id/buttonLogaritmo"
                    android:layout_weight="0.12"
                    android:onClick="clickLogaritmo" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="cos"
                    android:id="@+id/button13"
                    android:layout_weight="0.12"
                    android:onClick="clickCoseno" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:id="@+id/linearLayout4"
                android:layout_gravity="center_vertical"
                android:layout_weight=".20">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Clr"
                    android:id="@+id/buttonClr"
                    android:layout_weight="0.12"
                    android:onClick="clickClr"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/buttonMas"
                    android:layout_weight="0.12"
                    android:onClick="clickMas"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:id="@+id/buttonDiv"
                    android:layout_weight="0.12"
                    android:onClick="clickDiv"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:id="@+id/buttonMult"
                    android:layout_weight="0.12"
                    android:onClick="clickMult"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/buttonMenos"
                    android:layout_weight="0.12"
                    android:onClick="clickResta" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="e^x"
                    android:id="@+id/buttonExponencial"
                    android:layout_weight="0.12"
                    android:onClick="clickExponencial" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>